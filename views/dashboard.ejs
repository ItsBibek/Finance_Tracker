<div class="row mb-4 align-items-center">
    <div class="col-md-12">
        <h1 class="mb-0" style="font-size: 2.2rem; font-weight: 700; color: #2d3748;">Dashboard</h1>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4 mb-3 mb-md-0">
        <div class="budget-card h-100" style="border-radius: 16px; overflow: hidden;">
            <div style="background: linear-gradient(135deg, #10b981, #059669); padding: 20px; color: white;">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 style="font-weight: 600; margin-bottom: 0;">Total Income</h5>
                    <div style="width: 40px; height: 40px; border-radius: 12px; background-color: rgba(255,255,255,0.2); display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-arrow-down" style="font-size: 18px;"></i>
                    </div>
                </div>
            </div>
            <div class="p-4">
                <h3 style="font-weight: 700; font-size: 1.8rem; color: #10b981; margin-bottom: 0;">₹<%= totalIncome.toFixed(2) %></h3>
                <p class="text-muted mb-0" style="font-size: 0.9rem;">All time earnings</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3 mb-md-0">
        <div class="budget-card h-100" style="border-radius: 16px; overflow: hidden;">
            <div style="background: linear-gradient(135deg, #ef4444, #dc2626); padding: 20px; color: white;">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 style="font-weight: 600; margin-bottom: 0;">Total Expenses</h5>
                    <div style="width: 40px; height: 40px; border-radius: 12px; background-color: rgba(255,255,255,0.2); display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-arrow-up" style="font-size: 18px;"></i>
                    </div>
                </div>
            </div>
            <div class="p-4">
                <h3 style="font-weight: 700; font-size: 1.8rem; color: #ef4444; margin-bottom: 0;">₹<%= totalExpense.toFixed(2) %></h3>
                <p class="text-muted mb-0" style="font-size: 0.9rem;">All time spending</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3 mb-md-0">
        <div class="budget-card h-100" style="border-radius: 16px; overflow: hidden;">
            <div style="background: linear-gradient(135deg, <%= balance >= 0 ? '#4361ee, #3a56d4' : '#f59e0b, #d97706' %>); padding: 20px; color: white;">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 style="font-weight: 600; margin-bottom: 0;">Current Balance</h5>
                    <div style="width: 40px; height: 40px; border-radius: 12px; background-color: rgba(255,255,255,0.2); display: flex; align-items: center; justify-content: center;">
                        <i class="fas <%= balance >= 0 ? 'fa-wallet' : 'fa-exclamation-triangle' %>" style="font-size: 18px;"></i>
                    </div>
                </div>
            </div>
            <div class="p-4">
                <h3 style="font-weight: 700; font-size: 1.8rem; color: <%= balance >= 0 ? '#4361ee' : '#f59e0b' %>; margin-bottom: 0;">₹<%= balance.toFixed(2) %></h3>
                <p class="text-muted mb-0" style="font-size: 0.9rem;">Available funds</p>
            </div>
        </div>
    </div>
</div>

